<% set_meta_tags noindex: true %>

<div class="container-conscients first-title-padding page-font">
<h1><%= t('.forgot_your_password') %></h1>
</div>

<div class="page-container page-font">
  <div class="summary padding-tb">
    <p><%= t '.intro' %></p>
  </div>
</div>

<div class="page-container page-font">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50" %>
    </div>

    <div class="actions">
      <%= f.submit t('.ok'), class: 'btn conscients-btn btn-green' %>
    </div>
  <% end %>


</div>

