<h1 class="flex justify-center"><%= t 'pages.home.hello' %> Hello from <%= Rails.application.class
                                                                .parent_name %>!</h1>

<!--*********** AUTRE TEST 2*************-->
<!-- ***MENU*** -->
<div class= "top-menu sticky-top">
  <!-- MENU RIGHT -->
  <div class="top-menu-right d-none d-md-flex">
    <!-- ITEM 1 -->
    <!-- SEARCH MODAL -->
    <div class="top-menu-item">
      <!-- BUTTON TRIGGER MODAL -->
      <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-default navbar-btn">
      <span class="fa fa-search" aria-hidden="true" ></span>
      </button>

      <!-- MODAL -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h2><%= t 'pages.home.searching' %></h2>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            </div>
            <div class="modal-body">
              <%= form_with url: category_products_path(@category), method: :get, local: true, class: "form-inline my-2 mx-3 my-lg-0" do |form| %>
              <%= form.text_field :search, class: "form-control mr-sm-2" %>
              <%= form.submit t('.search'), value:"ok", :data => {:disable_with => 'ok'}, class: "btn btn-outline-success my-2 my-sm-0"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END ITEM 1 -->
    <div class="top-menu-item">
      <%= link_to cart_path(@cart) do %>
      <span class="badge badge-light"><%= @cart.items_number %></span>
      <%= fa_icon "shopping-cart 2x" %>
      <% end %>
    </div>
  </div>
  <!-- END MENU RIGHT -->

  <!-- MENU LEFT -->
  <div class="top-menu-left">
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg", height: 50, class: "d-md-none show-on-scroll" %>
  <% end %>
  </div>
  <!-- END MENU LEFT -->

  <!-- MENU CENTER -->
  <div class="top-menu-center d-none d-md-flex">
    <% Category.main.each do |category| %>
      <div class="mx-3"><%= link_to category.name, category_products_path(category) %></div>
      <% end %>
  </div>
  <!-- END MENU CENTER -->

    <!-- DROPDOWN RIGHT SMALL DEVICES -->
    <div class="dropdown d-md-none">
    <%= fa_icon "bars", class: "c-pointer", data: { toggle: "dropdown" } %>
      <div class="dropdown-menu dropdown-menu-right">
        <%= link_to t('shared.navbar.my_cart'), cart_path(@cart), class: 'dropdown-item' %>
        <%= link_to t('shared.navbar.my_account'), root_path, class: 'dropdown-item' %>
          <div class="dropdown-divider"></div>
          <% Category.main.each do |category| %>
          <%= link_to category.name, category_products_path(category), class: 'dropdown-item'  %>
          <% end %>
      </div>
    </div>
    <!-- END DROPDOWN RIGHT SMALL DEVICES -->

</div>
<!-- MENU END -->

