<% set_meta_tags noindex: true %>

<div class="container-conscients first-title-padding page-font">
  <h1><%= t 'devise.clients.edit.edit_account' %></h1>
</div>

<div class="session-page-container">
    <div class="p-3">
      <h2 class="my-4 f-08R-phone"><%= t('devise.clients.edit.edit_title', resource: resource_name.to_s.humanize) %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mr-sm-2", placeholder: true %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
            <% end %>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :current_password%> <br />
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control mr-sm-2"%>
            </div>
          </div>
        </div>

        <div class="form-group pt-md-3">
          <%= f.label :password, t('devise.clients.edit.new_pw')%> <br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control mr-sm-2" %>
          <% if @minimum_password_length %>

            <p class="f-08R"><em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em></p>
          <% end %>
        </div>

        <div class="py-3">
        <%= f.submit t('.update'), class: "btn conscients-btn btn-green" %>
        </div>
      <% end %>
    </div>

    <div class="py-5 px-3 border-top-dotted border-bottom-dotted">
      <h2 class="f-08R-phone"><%= t('.cancel_my_account') %></h2>
      <p><%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn conscients-btn btn-red" %></p>
    </div>
    <div class="p-3">
    <%= link_to t('devise.shared.links.back'), :back, class: "continue-shopping" %>
    </div>
</div>



