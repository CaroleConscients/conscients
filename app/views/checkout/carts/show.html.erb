<% set_meta_tags noindex: true %>

<div class="container mb-5">
  <% if @cart.line_items.empty? %>
    <h1 class="text-uppercase my-4"><%= t('.empty_cart') %></h1>
  <% else %>
    <!-- <h1 class="text-uppercase my-4"></%= t('.cart') %></h1> -->
    <div class="first-title-padding page-font">
    <h1><%= t('.cart') %></h1>
    </div>
    <table class="conscients-table-responsive first-col-fix-width mb-3">
      <thead>
        <tr class="top-tr text-center">
          <th class="th-font text-nowrap"><%= t('.selection') %></th>
          <th class="th-font"></th>
          <th class="th-font"><%= t('.quantity') %></th>
          <th class="th-font text-left"><%= t('.personalized_product') %></th>
          <th class="th-font"><%= t('.total_price') %></th>
          <th class="th-font"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart.line_items.includes(:product_sku).each do |line_item| %>
          <tr class="border-bottom-dotted td-font text-center">
            <td class="cart-img"><%= image_tag(line_item.product_images.first) %></td>
            <td>
              <div class="text-left"><%= line_item.product_sku.to_s %></div>
<!--               <div class="td-mobile-left"></%= line_item.recipient_name if line_item&.recipient_name&.present? %></div> -->

              <div class="text-left">
                <% if line_item&.recipient_name&.present? %>
                <span class= "heart-before"><%= line_item.recipient_name %></span>
                <% else %>
                <%= "" %>
                <% end %>
              </div>
            </td>
            <td><%= line_item.quantity %></td>
            <td>
<!--               <div class="td-mobile-left heart-before"></%= l(line_item.certificate_date, format: :default) if line_item&.certificate_date&.present? %></div> -->

              <div class="text-left">
                <% if line_item&.certificate_date&.present?%>
                  <span class="heart-before"><%= l(line_item.certificate_date, format: :default)%></span>
                <% else %>
                  <%= ""%>
                <% end %>
              </div>
              <div class="text-left"><%= line_item.recipient_message if line_item&.recipient_message&.present? %></div>
            </td>
            <td><%= humanized_money_with_symbol line_item.ttc_price %></td>
            <td>
              <%= link_to product_path(line_item.product, line_item: line_item) do %>
                <%= fa_icon "pencil", class: "c-pointer" %>
              <% end %>
              <%= link_to product_line_item_path(line_item.product, line_item), method: :delete do %>
                <%= fa_icon "times", class: "c-pointer" %>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>



    <div class="d-flex justify-content-between align-items-end">
      <div><%= link_to t('.continue_purchases'), category_products_path(Category.last_visited), class: "continue-shopping color-green" %></div>
      <div class="d-flex flex-column align-items-end">
        <div class="total-font">
          <%= t('.total_price') %> <span class="color-green"><%= humanized_money_with_symbol @cart.ttc_price %></span>
        </div>
        <div class="mb-5 total-comment-font"><p><%= t('.without_delivery_fees') %></p></div>
        <% if @cart.tree_only? %>
          <%= link_to t('.validate'), new_delivery_path(delivery_type: "email"), class: "btn conscients-btn btn-green" %>
        <% else %>
          <%= link_to t('.validate'), new_delivery_path(delivery_type: "postal"), class: "btn conscients-btn btn-green" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
