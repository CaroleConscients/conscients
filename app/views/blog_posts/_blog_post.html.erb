<div class="card shop-card p-2 mb-0">
  <%= image_tag(blog_post.main_image, class: "card-img-top rounded-0") %>
  <div class="card-body text-justify px-0">
    <div class="page-font"><h2><%= blog_post.title %></h2></div>
    <div class="page-font"><h5 class="title-grey pt-0"><%= blog_post.category %></h5></div>
    <hr>
    <div class="ql-displayer my-3">
      <%= sanitize blog_post.content.gsub(/<img.*?>/, '').truncate(700), tags: %w(a h1 h2 h3 h4 h5 h6 p ol ul li span), attributes: %w(class style href) %>
    </div>
    <%= link_to t('.read_article'), blog_post_path(blog_post), class: "btn conscients-btn btn-black" %>
    <hr>
  </div>
</div>


