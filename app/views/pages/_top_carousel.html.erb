<!-- OCCASIONS CAROUSEL TITLE AND TABS-->
<div class="container-conscients home-font home-occasions-title-padding">
  <h2 class="text-center">Des cadeaux et du sens</h2>
</div>
<div class="container-conscients home-font padding-b">
  <div class="tabs">
    <% categories.first(3).each_with_index do |category, index| %>
      <a class="tab <%= "active" if index.zero? %>" href="#" data-action="home-carousel#display<%= index %>" data-target="home-carousel.Tab<%= index %>" onclick="return false;">
        <h3><%= category.name%></h3>
      </a>
    <% end %>
  </div>
</div>

<!-- OCCASIONS CAROUSEL-->
<% categories.first(3).each_with_index do |category, index| %>
  <div id="occasions-carousel-<%= index %>" class="carousel slide <%= "d-none" unless index.zero? %>" data-ride="carousel" data-interval="false" data-target="home-carousel.Carousel<%= index %>">
    <div class="carousel-inner">
      <% category.products.home_displayable.first(10).each_with_index do |product, index| %>
        <div class="carousel-item <%= "active" if index.zero? %>">
          <!-- <div class="tab-content"> -->
            <div class="container-conscients flex-container">
              <div class="occasions-container">
                <%= image_tag product.background_image, class: 'occasions-img-box' %>
                <div class="occasions-card">
                  <%= link_to product_path(product) do %>
                    <div class="occasions-card-content-box home-font">
                      <%= image_tag product.images&.first, class: "occasions-card-img" %>
                      <div class="occasions-card-content">
                        <h3><%= product.name %></h3>
                        <h4><%= product.description_short %></h4>
                        <h5><%= humanized_money_with_symbol product&.ttc_price %></h5>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <!-- </div> end of tab content-->
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#occasions-carousel-<%= index %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#occasions-carousel-<%= index %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>
