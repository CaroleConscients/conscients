<% set_meta_tags title: @blog_post.seo_title,
                 description: @blog_post.meta_description %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to t('.home'), root_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to t(".journal"), blog_posts_path %>
    </li>
    <li class="breadcrumb-item active">
      <%= link_to @blog_post.title, blog_post_path(@blog_post) %>
    </li>
  </ol>
</nav>

<div class="container-conscients mb-5 ql-displayer my-3">
  <div class="page-font">
    <h1 class="pb-0"><%= @blog_post.title %></h1>
    <h4 class=text-center><%= @blog_post.category %></h4>
  </div>
  <div class="w-100 pt-3 text-justify">
    <%= image_tag(@blog_post.main_image, class: " float-left w-50 pr-3") %>
    <%= @blog_post.content.html_safe %>
  </div>
</div>

