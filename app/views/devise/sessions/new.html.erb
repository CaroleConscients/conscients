<div class="container">
  <h1 class="my-4"><%= t('.title') %></h1>
  <div class="row">
    <div class="col-sm-6">
      <h2><%= t('.sign_up') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.check_box :newsletter_subscriber %>
          <%= f.label t('.subscribe_to_newsletter') %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mr-sm-2", placeholder: true %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control mr-sm-2", placeholder: true %>
        </div>

        <%= f.submit t('.sign_up'), class: "btn btn-orange" %>
      <% end %>
    </div>

    <div class="col-sm-6">
      <h2><%= t('.already_sign_up') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mr-sm-2", placeholder: true %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control mr-sm-2", placeholder: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= f.submit t('.sign_in'), class: "btn btn-orange" %>
      <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
