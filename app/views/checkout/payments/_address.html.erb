    <h2 class="box-green-text-checked pb-resp-16"><%= t(title_key) %></h2>
    <div class="d-flex align-items-start pt-2 pb-4">
    <i class="fa fa-check pr-2 box-green-text-checked"></i>
    <div class="box-green-address-checked">
    <% if address.email? %>
      <p><%= address.email %></p>
    <% else %>
      <p><%= address.full_name %></p>
      <% if address.company %>
        <p><%= address.company %></p>
      <% end %>
      <% if address.address_1 %>
        <p><%= address.address_1 %></p>
      <% end %>
      <% if address.address_2 %>
        <p><%= address.address_2 %></p>
      <% end %>
      <p><%= address.city %> <%= address.zip_code %></p>
      <% if address.country %>
        <p><%= address.country %></p>
      <% end %>
    <% end %>
    </div>
    </div>
