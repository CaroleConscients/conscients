<div>
  <div class= "d-flex justify-content-end total-comment-font">
    <p class="mb-1"><%= t('.sub_total') %></p>
    <p class="color-green mb-1 pl-2"><%= humanized_money_with_symbol cart.ttc_price %></p>
  </div>
    <% if @cart.coupon %>
      <div class= "d-flex justify-content-end total-comment-font">
        <p class="mb-1"><%= t('.from_discount') %></p>
        <p class="color-green mb-1 pl-2">- <%= humanized_money_with_symbol cart.coupon_discount %></p>
      </div>
    <% end %>

  <div class= "d-flex justify-content-end total-comment-font">
    <p><%= t('.delivery_fees') %> </p>
    <p class="color-green pl-2">+ <%= humanized_money_with_symbol cart.current_delivery_fees %> </p>
  </div>

  <div class= "d-flex justify-content-end small-total-font">
    <div><%= t('.total_price') %></div>
    <div class="color-green pl-2"><%= humanized_money_with_symbol cart.ttc_price_all_included %></div>
  </div>

</div>
