<!-- SHOP CAROUSEL TITLE  -->
<div class="container-conscients home-font home-shop-title-padding">
  <h2 class="text-center"><%= category.name %></h2>
  <!-- vêtements bio bébé -->
</div>

<!-- SHOP CAROUSEL DESKTOP AND TABLET LANDSCAPE-->
<div id="shop-carousel-desktop" class="carousel slide carousel-shop-desktop" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
    <% category.products.home_displayable.first(12).in_groups_of(4, false).each_with_index do |group, index| %>
      <div class="carousel-item <%= "active" if index.zero? %>">
        <div class="carousel-container home-font">
          <div class="row">
            <% group.each do |product| %>
              <div class="col-md-3">
                <%= link_to product_path(product) do %>
                  <div class="home-shop-card">
                    <%= image_tag(product.images.first, class: "home-shop-card-img") %>
                    <div class="home-shop-card-content">
                      <h3 class="truncate-4-cards"><%= product.name %></h3>
                      <h4 class="truncate-4-cards"><%= product.description_short %></h4>
                      <h5><%= humanized_money_with_symbol product.ttc_price %></h5>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if category.products.displayable.count > 4 %>
    <a class="carousel-control-prev" href="#shop-carousel-desktop" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#shop-carousel-desktop" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  <% end %>
</div>

<!-- SHOP CAROUSEL MOBILE -->
<div id="shop-carousel-mobile" class="carousel slide carousel-shop-mobile" data-ride="carousel" data-interval="false">
  <div class="carousel-inner home-font">
    <% category.products.home_displayable.first(10).each_with_index do |product, index| %>
      <div class="carousel-item <%= "active" if index.zero? %>">
        <%= link_to product_path(product) do %>
          <div class="home-shop-card">
            <%= image_tag(product&.images&.first, class: "home-shop-card-img") %>
            <div class="home-shop-card-content">
              <h3><%= product&.name %></h3>
              <h4 class="truncate-4-cards"><%= product&.description_short %></h4>
              <h5><%= humanized_money_with_symbol product&.ttc_price %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#shop-carousel-mobile" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#shop-carousel-mobile" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
