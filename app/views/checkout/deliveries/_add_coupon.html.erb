<div class="my-2 d-flex justify-content-start align-items-end">
  <%= form_with url: coupon_to_order_additions_path, method: :post, local: true, class: "form-inline my-2 mx-3 my-lg-0" do |i| %>
    <%= i.text_field :name, class: "form-control mr-sm-2", placeholder: t('.coupon_name') %>
    <%= i.submit t('.add_coupon'), class: "btn conscients-btn btn-green"%>
  <% end %>
</div>
